<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Đặt các View để hiển thị thông tin chi tiết của món ăn -->
    <ImageView
        android:id="@+id/imageViewFoodDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textViewFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFoodDetail"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFoodName"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewIngredients"
        android:textSize="16sp"
        android:padding="16dp"/>

</RelativeLayout>
